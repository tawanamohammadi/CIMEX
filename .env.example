# CIMEX Panel Configuration
# Copy this file to .env and update with your values

# Panel Settings
PANEL_HOST=0.0.0.0
PANEL_PORT=8000
PANEL_DOMAIN=
HTTPS_ENABLED=false
HTTPS_CERT_PATH=./certs/server.crt
HTTPS_KEY_PATH=./certs/server.key
DOCS_ENABLED=true

# Database Settings
DB_TYPE=sqlite
DB_PATH=./data/cimex.db
# For PostgreSQL (if DB_TYPE=postgresql):
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=cimex
# DB_USER=cimex
# DB_PASSWORD=changeme

# Node Communication Settings
NODE_PORT=4443
NODE_CERT_PATH=./certs/ca.crt
NODE_KEY_PATH=./certs/ca.key
# Separate CA cert for foreign servers
NODE_SERVER_CERT_PATH=./certs/ca-server.crt
NODE_SERVER_KEY_PATH=./certs/ca-server.key

# Security
SECRET_KEY=changeme-secret-key-change-in-production

# Nginx Settings (for HTTPS profile)
CIMEX_HTTP_PORT=80
CIMEX_HTTPS_PORT=443
CIMEX_SSL_DOMAIN=REPLACE_DOMAIN

# Version
CIMEX_VERSION=latest
